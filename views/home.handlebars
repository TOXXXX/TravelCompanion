<div class="container">
  <section class="hero">
    <h2>Discover Travel Routes & Find Companions</h2>
    <p>Share your travel experiences and connect with fellow adventurers</p>
    <div class="cta-buttons">
      <a href="/post/create" class="btn">Create a Post</a>
      <a href="/companions" class="btn btn-outline">Find Companions</a>
    </div>
  </section>

  <section id="routes">
    <h2>Popular Travel Routes</h2>
    <div class="card-grid">
      {{#each posts}}
        <div class="card">
          <h3>{{ title }}</h3>
          <p>{{ intro }}</p>
          <p><strong>Destinations:</strong> {{ destinations }}</p>
          <p><strong>Duration:</strong> {{ duration }}</p>
          <p>{{ likes }} likes â€¢ {{ comments }} comments</p>
        </div>
      {{/each}}
    </div>
  </section>

  <section id="companions">
    <h2>Find Travel Companions</h2>
    <div class="card-grid">
      {{#each users}}
        <div class="card">
          <h3>{{ username }}</h3>
          <p>{{ bio }}</p>
          <a href="/personal/{{ username }}" class="btn">Connect</a>
        </div>
      {{/each}}
    </div>
  </section>
</div>