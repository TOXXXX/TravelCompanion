    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-content">
          <h1>Travel Companion</h1>
          <nav>
            <ul>
              <li><a href="routes">Routes</a></li>
              <li><a href="#companions">Companions</a></li>
              <li><a href="#profile">Profile</a></li>
              <li><a href="#login">Log in</a></li>
              <li><a href="register" class="btn-signup">Sign Up</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main>{{{body}}}</main>

    <footer>
      <div class="container">
        <p>
          &copy; 2024 Travel Companion. Open-source platform for travel ideas.
        </p>
        <p>
          Contribute on
          <a
            href="https://github.com/TOXXXX/TravelCompanion"
            class="social"
            aria-label="GitHub"
          >
            <i class="fab fa-github"></i>
          </a>
        </p>
      </div>
    </footer>
    <script src="/js/main.js"></script>
  </body>
</html>
