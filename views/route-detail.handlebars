
  <div class="container">
    <h1 style="text-align: center;">{{route.routeName}}</h1>

    <div class="map-container">
      {{#if route.mapDataUrl}}
      <!-- Display the generated map image -->
      <img id="static-map" src="{{route.mapDataUrl}}" alt="Generated Map" />
      {{else}}
      <!-- Placeholder image if no map URL is available -->
      <img id="static-map" src="https://via.placeholder.com/800x400?text=Map+will+appear+here" alt="Map Placeholder" />
      {{/if}}
    </div>
    
    <!-- Route Details -->
    <div class="route-details">
      <p><strong>Description:</strong> {{route.routeDesc}}</p>
      <p><strong>Trip Duration:</strong> {{route.tripDuration}}</p>
      
      <div class="origin-destination">
        <div class="origin">
          <h3>Origin</h3>
          <p><strong>Name:</strong> {{route.origin.name}}</p>
          {{#if route.origin.description}}
            <p><strong>Description:</strong> {{route.origin.description}}</p>
          {{/if}}
        </div>
        
        <div class="destination">
          <h3>Destination</h3>
          <p><strong>Name:</strong> {{route.destination.name}}</p>
          {{#if route.destination.description}}
            <p><strong>Description:</strong> {{route.destination.description}}</p>
          {{/if}}
        </div>
      </div>
      
      <p><strong>Route Type:</strong> {{route.routeType}}</p>
    </div>
    
    <!-- Action Buttons -->
    <div class="action-buttons">
      <a href="/route/edit/{{route._id}}" class="btn edit-btn">Edit</a>
      
      <!-- Delete Button as a Form for Security (CSRF Protection) -->
      <form action="/route/delete/{{route._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this route?');">
        <button type="submit" class="btn delete-btn">Delete</button>
      </form>
    </div>
    
    <!-- Back to Home or Routes List -->
    <div class="back-link">
      <a href="/">‚Üê Back to Routes List</a>
    </div>
  </div>
  
